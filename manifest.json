{
  "manifest_version": 2,

  "name": "Extension Name",
  "description": "Extension Description",
  "version": "0.2.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Chrome Extension Title",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "css": ["mystyles.css"],
      "js": ["test-script.js"],
      "run_at": "document_idle"
    }
  ]
}
